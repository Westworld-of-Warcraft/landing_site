@page "/milestones"
@using WWoW.InformationSite.WebBlazor.Models

<PageTitle>Milestones - WWoW</PageTitle>

<div class="px-10 py-6">
    <div class="grid gap-8 lg:grid-cols-[240px_1fr]">
        <aside class="hidden lg:block">
            <SidebarSectionNav />
        </aside>

        <section>
            <div class="px-2">
                <div class="text-[#a89bbf] text-sm">
                    <span>Overview</span>
                    <span class="mx-2 text-[#5a4b6b]">/</span>
                    <span class="text-white">Milestones</span>
                </div>

                <div class="mt-2 flex items-center justify-between">
                    <h1 class="text-white text-2xl font-extrabold leading-tight">Milestones</h1>
                    <a href="/contributing"
                       class="inline-flex items-center justify-center rounded-md bg-[#5b4b6d] px-3 py-1.5 text-sm font-semibold text-white hover:bg-[#6b5a7d]">
                        Contribute
                    </a>
                </div>

                <p class="mt-1 max-w-2xl text-sm leading-relaxed text-[#c7bdd6]">
                    Track our progress as we build the future of AI-driven gaming. Each milestone represents a significant step
                    toward our vision, with detailed task lists and completion percentages.
                </p>
            </div>

            <div class="mt-6 grid gap-6 lg:grid-cols-[1fr_320px]">
                <div>
                    @foreach (var m in MilestoneData.All)
                    {
                        <MilestoneSection Item="m" />
                    }
                </div>

                <div class="order-first lg:order-last">
                    <MilestoneOutlineList Items="MilestoneData.All" />
                </div>
            </div>
        </section>
    </div>
</div>