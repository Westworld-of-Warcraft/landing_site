@using WWoW.InformationSite.WebBlazor.Models

@code {
    [Parameter] public IReadOnlyList<Milestone> Items { get; set; } = Array.Empty<Milestone>();
}

<div class="rounded-lg border border-[#332b40] bg-[#221a2a]/60 p-4">
    <div class="mb-2 flex items-center justify-between">
        <span class="text-[#cfc6dc] text-sm font-medium">Contribute</span>
        <a href="/contributing"
           class="inline-flex items-center justify-center rounded-md border border-[#3a3146] bg-[#271f30] px-3 py-1.5 text-xs font-semibold text-[#e8e1f2]">
            Open
        </a>
    </div>

    <ul class="space-y-2">
        @foreach (var m in Items)
        {
            <li class="flex items-center justify-between rounded-md px-2 py-2 hover:bg-[#2b2335]/70">
                <div class="flex items-center gap-3">
                    <div class="size-4 rounded-sm bg-[#2f2736]"></div>
                    <span class="text-sm text-white/90">@m.Title</span>
                </div>
                <span class="text-xs text-[#a89bbf]">
                    @(@m.Status switch
                    {
                        ProjectTaskStatus.Completed  => "Completed",
                        ProjectTaskStatus.InProgress => "In Progress",
                        _                     => "Planned"
                    })
                </span>
            </li>
        }
    </ul>
</div>