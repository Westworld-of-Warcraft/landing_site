@code {
    [Parameter] public string? ActivePath { get; set; }
    
    private readonly Dictionary<string, NavSection> _sections = new()
    {
        ["Getting Started"] = new NavSection("Getting Started", new[]
        {
            new NavItem("Introduction", "/docs"),
            new NavItem("Overview", "/docs/overview"),
            new NavItem("Installation", "/docs/installation"),
            new NavItem("Quick Start", "/docs/quick-start")
        }),
        ["Core Concepts"] = new NavSection("Core Concepts", new[]
        {
            new NavItem("Bot Behavior", "/docs/bot-behavior"),
            new NavItem("World Events", "/docs/world-events"),
            new NavItem("Player Interactions", "/docs/player-interactions")
        }),
        ["API Reference"] = new NavSection("API Reference", new[]
        {
            new NavItem("Overview", "/docs/api"),
            new NavItem("Endpoints", "/docs/api/endpoints"),
            new NavItem("Authentication", "/docs/api/auth")
        }),
        ["Examples"] = new NavSection("Examples", new[]
        {
            new NavItem("Basic Examples", "/docs/examples"),
            new NavItem("Advanced Examples", "/docs/examples/advanced")
        }),
        ["Contributing"] = new NavSection("Contributing", new[]
        {
            new NavItem("Contributing Guide", "/docs/contributing"),
            new NavItem("Code Style", "/docs/contributing/style")
        })
    };

    private string ItemClass(string path) =>
        path == ActivePath
            ? "block px-3 py-2 text-sm font-medium text-white bg-[#5b4b6d] rounded-md"
            : "block px-3 py-2 text-sm font-medium text-[#c7bdd6] hover:text-white hover:bg-[#2c2433] rounded-md";

    private record NavSection(string Title, NavItem[] Items);
    private record NavItem(string Title, string Path);
}

<nav class="hidden lg:block w-60 space-y-6">
    @foreach (var navSection in _sections.Values)
    {
        <div>
            <h3 class="text-xs font-semibold text-[#a89bbf] uppercase tracking-wide mb-3">
                @navSection.Title
            </h3>
            <ul class="space-y-1">
                @foreach (var item in navSection.Items)
                {
                    <li>
                        <a href="@item.Path" class="@ItemClass(item.Path)">
                            @item.Title
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</nav>