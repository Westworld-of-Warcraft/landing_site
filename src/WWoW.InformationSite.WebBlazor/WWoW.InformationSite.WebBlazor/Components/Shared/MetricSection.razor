@code {
    [Parameter] public string Id { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string ImageUrl { get; set; } = "";
}

<section id="@Id" class="scroll-mt-24 px-2">
    <h3 class="mt-6 text-white text-lg font-bold">@Title</h3>
    <p class="mt-1 text-sm leading-relaxed text-[#c7bdd6]">@Description</p>
    <div class="mt-3">
        <MapPanel ImageUrl="@(string.IsNullOrWhiteSpace(ImageUrl) ? null : ImageUrl)" />
    </div>
</section>