@* Components/VideoPanel.razor *@
@code {
    [Parameter] public string BackgroundImageUrl { get; set; } = string.Empty;
    [Parameter] public EventCallback OnPlay { get; set; }
    private Task HandlePlay() => OnPlay.InvokeAsync();
}

<div class="p-4">
    <div class="relative flex items-center justify-center bg-[#c6b2e5] bg-cover bg-center aspect-video rounded-xl p-4"
         style="background-image: url('@BackgroundImageUrl');">
        <button class="flex shrink-0 items-center justify-center rounded-full size-16 bg-black/40 text-white"
                @onclick="HandlePlay" aria-label="Play">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
                <path d="M240,128a15.74,15.74,0,0,1-7.6,13.51L88.32,229.65a16,16,0,0,1-16.2.3A15.86,15.86,0,0,1,64,216.13V39.87a15.86,15.86,0,0,1,8.12-13.82,16,16,0,0,1,16.2.3L232.4,114.49A15.74,15.74,0,0,1,240,128Z"/>
            </svg>
        </button>
    </div>
</div>