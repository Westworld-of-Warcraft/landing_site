@using WWoW.InformationSite.WebBlazor.Models

@code {
    [Parameter] public StatsTab Active { get; set; }
    [Parameter] public EventCallback<StatsTab> OnChange { get; set; }

    private string TabBtnClass(StatsTab t) =>
        "px-0 pb-3 text-sm font-semibold border-b-2 -mb-[2px] " +
        (t == Active ? "text-white border-[#8b5cf6]" : "text-[#a89bbf] border-transparent hover:text-white");

    private Task SetTab(StatsTab t) => OnChange.InvokeAsync(t);
}

<div class="px-2">
    <div class="flex gap-6 border-b border-[#332b40]">
        @foreach (var t in Enum.GetValues<StatsTab>())
        {
            <a href="@($"#{StatsLabels.Anchor(t)}")"
               class="@TabBtnClass(t)"
               @onclick="() => SetTab(t)"
               @onclick:preventDefault="true">
                @StatsLabels.Label(t)
            </a>
        }
    </div>
</div>